<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/info_member"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_info_member"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_home"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_alignLeft="@+id/info_member"
        android:layout_alignTop="@+id/info_member" />

    <com.example.afinal.custom_textView.RobotoBlackTextView
        android:id="@+id/name_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đỗ Thế Hiệp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/icon"
        android:layout_alignTop="@+id/info_member" />

    <com.example.afinal.custom_textView.RobotoMediumTextView
        android:id="@+id/texttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bắt đầu: "
        android:textColor="@color/texttime"
        android:layout_below="@+id/name_member"
        android:layout_toEndOf="@+id/icon"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"/>

    <com.example.afinal.custom_textView.RobotoMediumTextView
        android:id="@+id/starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13/09/2023"
        android:textColor="@color/texttime"
        android:layout_below="@+id/name_member"
        android:layout_toEndOf="@+id/texttime"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/image_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_phone"
        android:layout_below="@+id/texttime"
        android:layout_toEndOf="@+id/icon"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"/>

    <com.example.afinal.custom_textView.RobotoMediumTextView
        android:id="@+id/textphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0925462529"
        android:textColor="@color/textphone"
        android:layout_below="@+id/texttime"
        android:layout_toEndOf="@+id/image_phone"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>